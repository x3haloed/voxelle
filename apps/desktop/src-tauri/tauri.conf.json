{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Voxelle",
  "version": "0.1.0",
  "identifier": "com.voxelle.voxelle",
  "build": {
    "beforeDevCommand": "cd ../../.. && npm run dev -w @voxelle/web -- --port 5173",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd ../../.. && npm run build -w @voxelle/web",
    "frontendDist": "../../web/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Voxelle",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; base-uri 'self'; object-src 'none'; frame-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' http://127.0.0.1:* http://localhost:* https: ws: wss:; form-action 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
